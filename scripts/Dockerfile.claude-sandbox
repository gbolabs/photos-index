FROM mcr.microsoft.com/dotnet/sdk:10.0

# Install Node.js 24
RUN curl -fsSL https://deb.nodesource.com/setup_24.x | bash - && \
    apt-get install -y nodejs

# Install tools (including Python for upload server and EXIF processing tools)
RUN apt-get update && apt-get install -y \
    git \
    curl \
    jq \
    vim \
    python3 \
    exiftool \
    libimage-exiftool-perl \
    exiv2 \
    jhead \
    && rm -rf /var/lib/apt/lists/*

# Install GitHub CLI
RUN curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg && \
    chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg && \
    echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | tee /etc/apt/sources.list.d/github-cli.list > /dev/null && \
    apt-get update && \
    apt-get install -y gh && \
    rm -rf /var/lib/apt/lists/*

# Install Docker CLI (works with Podman socket via Docker API compatibility)
RUN curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg && \
    echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/debian bookworm stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null && \
    apt-get update && \
    apt-get install -y docker-ce-cli docker-buildx-plugin docker-compose-plugin && \
    rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI and Angular CLI
RUN npm install -g @anthropic-ai/claude-code@latest @angular/cli@latest

# Install Playwright browsers and dependencies
RUN npx playwright install --with-deps chromium firefox webkit

# Install code-server (VS Code in browser)
RUN curl -fsSL https://code-server.dev/install.sh | sh

# Create non-root user and add to docker group
RUN (groupadd docker || true) && \
    useradd -m -s /bin/bash claude && \
    usermod -aG docker claude && \
    mkdir -p /workspace && \
    chown claude:claude /workspace

# Create workspace
WORKDIR /workspace

# Copy and set up entrypoint script
COPY scripts/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Copy upload server script
COPY scripts/claude-upload-server/server.py /opt/upload-server.py
RUN chmod +x /opt/upload-server.py

# Switch to non-root user
USER claude

# Create config directories for plugins, auth, and file sharing (will be mounted as volume)
RUN mkdir -p /home/claude/.claude /home/claude/.anthropic /home/claude/share

ENTRYPOINT ["/entrypoint.sh"]
