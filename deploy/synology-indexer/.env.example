# Photos Index - Synology Indexer Configuration
# Copy this file to .env and customize values

# ===================================
# TrueNAS Connection
# ===================================

# TrueNAS API endpoint (via Traefik reverse proxy)
# Format: http://<truenas-ip>:8050/api
API_URL=http://192.168.1.100:8050/api

# ===================================
# Photo Directories
# ===================================

# Path to photos on Synology (will be mounted read-only)
PHOTOS_PATH=/volume1/photos

# ===================================
# Indexing Settings
# ===================================

# How often to scan for new/changed files (in minutes)
# Default: 60 (1 hour)
SCAN_INTERVAL_MINUTES=60

# Logging level (Trace, Debug, Information, Warning, Error)
LOG_LEVEL=Information

# ===================================
# OpenTelemetry (Optional)
# ===================================

# Send traces to Aspire dashboard on TrueNAS
# Format: http://<truenas-ip>:8053
OTEL_ENDPOINT=http://192.168.1.100:8053

# ===================================
# Image Version
# ===================================

# Container image version (default: 0.0.1)
IMAGE_VERSION=0.0.1
